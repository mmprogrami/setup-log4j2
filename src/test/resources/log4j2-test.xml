<?xml version="1.0"?>
<Configuration status="INFO" monitorInterval="0">
  <Properties>
    <Property name="pattern">%d{ISO8601}&#x09;%highlight{%5.5p}&#x09;%C{1}&#x09;%M.%L&#x09;%m&#x09;(%t)%n</Property>
  </Properties>
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="${pattern}"  charset="UTF-8"/>
      <Filters>
        <LevelRangeFilter minLevel="TRACE" maxLevel="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </Console>
    <Console name="stderr" target="SYSTEM_ERR">
      <PatternLayout pattern="${pattern}" charset="UTF-8"/>
      <Filters>
        <LevelRangeFilter minLevel="WARN" maxLevel="FATAL" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="${sys:log4j2.root.level:-INFO}">
      <AppenderRef ref="stdout"/>
      <AppenderRef ref="stderr" />
    </Root>
  </Loggers>
</Configuration>
